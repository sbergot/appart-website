mixin image(name)
  img(src='thumbnails/' + name + '.jpg' data-original='photos/' + name + '.jpg' alt=name)

mixin image-large(name)
  img(src='photos-medium/' + name + '.jpg' data-original='photos/' + name + '.jpg' alt=name)

mixin navlink(file, name)
  a(href='./' + file + '.html' class= name === title ? 'current' : '')= name

doctype html
html(lang='en')
  head
    include _locals
    block variables
    // https://rueil-malmaison-92500.site-pap.fr/accueil.html
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
    meta(name="Description" content="Appartement T2 meublé à louer - 50m² - Puteaux (92800) - disponible à partir de #{date_disponibilite}")
    title= title
    link(rel='stylesheet', href='style.css')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.2.0/viewer.min.js")
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.2.0/viewer.min.css')
    script.
      window.onload = function() {
        var viewerElt = document.getElementById('viewer');
        if (!viewerElt) { return; }
        var viewer = new Viewer(
          viewerElt,
          {
            url: 'data-original',
            title: [1, (image, imageData) => `${image.alt}`],
            navbar: 3,
            toolbar : { prev: 1, next: 1 }
          });
      }
  body
    header
      +navlink('index', 'Présentation')
      +navlink('appartement', 'Appartement')
      +navlink('photos', 'Photos')
      +navlink('contact', 'Contact')
    main
      h1 Appartement T2 meublé à louer - 50m² - Puteaux (92800) - disponible à partir de #{date_disponibilite}
      h2= title
      article
        block content